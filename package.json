{
  "name": "@next-halo/hokipoki-cli",
  "version": "1.3.5",
  "description": "HokiPoki CLI - P2P marketplace for AI CLI tools",
  "main": "dist/cli/index.js",
  "bin": {
    "hokipoki": "./dist/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Next-Halo/hokipoki-cli.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "README.md",
    "LICENSE",
    "tsconfig.json",
    "package-lock.json",
    "container/executor.ts",
    "config/cli-tools.ts"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "copyfiles -u 0 \"docker/**/*\" dist/",
    "dev": "tsx cli/index.ts",
    "hokipoki": "tsx cli/index.ts",
    "build-docker": "docker build -f docker/Dockerfile.secure-executor -t hokipoki/secure-executor ."
  },
  "keywords": [
    "ai",
    "cli",
    "p2p",
    "marketplace"
  ],
  "author": "HokiPoki Team",
  "license": "MIT",
  "dependencies": {
    "@types/archiver": "^6.0.3",
    "@types/bcrypt": "^6.0.0",
    "@types/glob": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "glob": "^11.0.3",
    "inquirer": "^12.9.6",
    "jsonwebtoken": "^9.0.2",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "open": "^8.4.2",
    "ora": "^5.4.1",
    "simple-git": "^3.27.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.13",
    "copyfiles": "^2.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
